<% provide :title do %><%= t('pages.titles.documentation') %><% end %>
  <% content_for :canonical do %>
    <%= render "shared/canonical", href: page_url("documentation") %>
  <% end %>

  <div class="jumbo light">
    <div class="row">
      <div class="small-12 column">
        <h2><%= t("pages.documentation") %></h2>
      </div>
    </div>
  </div>

  <div class="more-info-content documentation-content">
    <div class="row margin-top">
      <div class="small-12 medium-9 column">
        <%= raw content_block("documentation_text", I18n.locale) %>
      </div>

      <div class="small-12 medium-4 large-3 column more-info-sidebar">
        <%= render "pages/help/sidebar" %>
      </div>
    </div>

    <div class="row">
      <hr>
      <div class="small-12 column">
        <%= render "pages/help/other" %>
      </div>
    </div>
  </div>
